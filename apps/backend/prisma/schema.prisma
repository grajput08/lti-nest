generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IdToken {
  id           String   @id @default(uuid())
  iss          String?
  platformId   String?
  clientId     String?
  deploymentId String?
  user         String?
  userInfo     Json?
  platformInfo Json?
  createdAt    DateTime @default(now())

  @@index([createdAt, iss, clientId, deploymentId, user])
  @@map("idtoken")
}

model ContextToken {
  id                  String   @id @default(uuid())
  contextId           String?
  path                String?
  user                String?
  roles               String[]
  targetLinkUri       String?
  context             Json?
  resource            Json?
  custom              Json?
  endpoint            Json?
  namesRoles          Json?
  lis                 Json?
  launchPresentation  Json?
  messageType         String?
  version             String?
  deepLinkingSettings Json?
  createdAt           DateTime @default(now())

  @@index([createdAt, contextId, user])
  @@map("contexttoken")
}

model Platform {
  id                  String   @id @default(uuid())
  platformName        String?
  platformUrl         String?
  clientId            String?
  authEndpoint        String?
  accesstokenEndpoint String?
  authorizationServer String?
  kid                 String?  @unique
  authConfig          Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([platformUrl, clientId])
  @@index([platformUrl])
  @@map("platform")
}

model PlatformStatus {
  id        String   @id
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("platformstatus")
}

model PublicKey {
  kid         String   @id
  platformUrl String?
  clientId    String?
  iv          String?
  data        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("publickey")
}

model PrivateKey {
  kid         String   @id
  platformUrl String?
  clientId    String?
  iv          String?
  data        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("privatekey")
}

model AccessToken {
  id          String   @id @default(uuid())
  platformUrl String?
  clientId    String?
  scopes      String?
  iv          String?
  data        String?
  createdAt   DateTime @default(now())

  @@unique([platformUrl, clientId, scopes])
  @@index([createdAt])
  @@map("accesstoken")
}

model Nonce {
  nonce     String   @id
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("nonce")
}

model State {
  state     String   @id
  query     Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("state")
}
